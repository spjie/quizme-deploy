{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "cd frontend && npm install",
  "framework": null,
  "build": {
    "env": {
      "PYTHON_VERSION": "3.12"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index" },
    { "source": "/auth/:path*", "destination": "/api/index" },
    { "source": "/save", "destination": "/api/index" },
    { "source": "/open/:path*", "destination": "/api/index" },
    { "source": "/list-jsons", "destination": "/api/index" },
    { "source": "/delete/:path*", "destination": "/api/index" },
    { "source": "/chat", "destination": "/api/index" }
  ]
}
